{
  "manifest_version": 3,
  "name": "Lovebug - AI Assistant (Enterprise)",
  "version": "1.0.0",
  "description": "AI-powered browser assistant for enterprise productivity",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "host_permissions": [
    "https://*.company-internal.com/*",
    "https://internal-ai-api.company.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; style-src 'self' 'unsafe-inline';"
  },
  "externally_connectable": {
    "matches": [
      "https://*.company-internal.com/*"
    ]
  },
  "commands": {
    "send-to-ai": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "선택한 텍스트를 AI로 보내기"
    },
    "toggle-chat": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "채팅창 열기/닫기"
    }
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.svg",
      "32": "icon.svg",
      "48": "icon.svg",
      "128": "icon.svg"
    }
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.company-internal.com/*"
      ],
      "js": ["src/content.tsx"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["*.css", "*.js"],
      "matches": ["https://*.company-internal.com/*"]
    }
  ],
  "icons": {
    "16": "icon.svg",
    "32": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  }
} 