{
  "manifest_version": 3,
  "name": "농협 AI 어시스턴트 - Lovebug",
  "version": "1.0.0",
  "description": "농협은행 직원을 위한 AI 기반 업무 지원 도구",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://*.nonghyup.com/*",
    "https://*.nhbank.com/*",
    "https://*.nonghyup.local/*",
    "https://ai-api.nonghyup.local/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; style-src 'self' 'unsafe-inline'; connect-src https://*.nonghyup.com https://*.nonghyup.local;"
  },
  "externally_connectable": {
    "matches": [
      "https://*.nonghyup.com/*",
      "https://*.nhbank.com/*"
    ]
  },
  "commands": {
    "send-to-ai": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "선택한 텍스트를 AI로 분석"
    },
    "toggle-chat": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "AI 채팅창 열기/닫기"
    }
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "농협 AI 어시스턴트",
    "default_icon": {
      "16": "nh-icon-16.png",
      "32": "nh-icon-32.png",
      "48": "nh-icon-48.png",
      "128": "nh-icon-128.png"
    }
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.nonghyup.com/*",
        "https://*.nhbank.com/*",
        "https://*.nonghyup.local/*"
      ],
      "js": ["src/content.tsx"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["*.css", "*.js", "fonts/*"],
      "matches": [
        "https://*.nonghyup.com/*",
        "https://*.nhbank.com/*",
        "https://*.nonghyup.local/*"
      ]
    }
  ],
  "icons": {
    "16": "nh-icon-16.png",
    "32": "nh-icon-32.png",
    "48": "nh-icon-48.png",
    "128": "nh-icon-128.png"
  },
  "update_url": "https://extension.nonghyup.local/lovebug/update.xml"
} 